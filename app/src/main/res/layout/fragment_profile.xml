<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="csp15cap.fitstart.ProfileFragment"
    android:id="@+id/relativeLayout4">


    <ImageView
        android:id="@+id/imageview_settings_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edittext_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageview_settings_profile_pic" />

    <EditText
        android:id="@+id/edittext_settings_current_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="weight in lb"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/edittext_settings_name"
        app:layout_constraintStart_toStartOf="@+id/edittext_settings_name"
        app:layout_constraintTop_toBottomOf="@+id/edittext_settings_name" />

    <EditText
        android:id="@+id/edittext_settings_calorie_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Cals in kcal"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/edittext_settings_current_weight"
        app:layout_constraintStart_toStartOf="@+id/edittext_settings_current_weight"
        app:layout_constraintTop_toBottomOf="@+id/edittext_settings_current_weight" />

    <Button
        android:id="@+id/btn_settings_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save Changes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_settings_calorie_daily" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="68dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:text="Target Weight"
        app:layout_constraintTop_toTopOf="@+id/edittext_settings_current_weight"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_week_of"
        android:layout_width="68dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:text="Target Daily Cals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_settings_calorie_daily" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Username"
        app:layout_constraintStart_toStartOf="@+id/textview1"
        app:layout_constraintTop_toTopOf="@+id/edittext_settings_name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:layout_marginTop="78dp"
        android:text="Update Profile photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview1" />

</android.support.constraint.ConstraintLayout>
