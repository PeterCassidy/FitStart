<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csp15cap.fitstart.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageview_settings_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light" />

    <EditText
        android:id="@+id/edittext_settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_settings_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edittext_settings_current_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edittext_settings_name"
        android:layout_below="@+id/edittext_settings_name"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="weight in lb"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_settings_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_settings_current_weight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Save Changes" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="68dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/edittext_settings_current_weight"
        android:layout_marginStart="12dp"
        android:text="Target Weight" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview1"
        android:layout_marginTop="201dp"
        android:text="Username" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="89dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textview1"
        android:layout_marginTop="78dp"
        android:text="Update Profile photo" />

</RelativeLayout>
