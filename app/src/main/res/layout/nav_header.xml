<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/nav_profile_pic"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/no_profile" />

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="UserName"
        android:textAlignment="center"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nav_profile_pic" />

    <TextView
        android:id="@+id/nav_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="experience"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/nav_username"
        app:layout_constraintTop_toBottomOf="@+id/nav_level" />

    <TextView
        android:id="@+id/nav_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorSecondary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/nav_username"
        app:layout_constraintStart_toStartOf="@+id/nav_username"
        app:layout_constraintTop_toBottomOf="@+id/nav_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Level"
        android:textColor="@color/colorSecondaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/nav_level"
        app:layout_constraintEnd_toStartOf="@+id/nav_level"
        app:layout_constraintTop_toTopOf="@+id/nav_level" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Exp"
        android:textColor="@color/colorSecondaryDark"
        app:layout_constraintBottom_toBottomOf="@+id/nav_xp"
        app:layout_constraintEnd_toStartOf="@+id/nav_xp"
        app:layout_constraintTop_toTopOf="@+id/nav_xp" />
</android.support.constraint.ConstraintLayout>