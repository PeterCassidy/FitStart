<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewFoodEntryFragment">

    <TextView
        android:id="@+id/tv_new_food_test"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="test" />

    <Button
        android:id="@+id/btn_food_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_food_desc"
        android:layout_below="@+id/sp_new_food_type"
        android:text="cancel" />

    <Button
        android:id="@+id/btn_food_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sp_new_food_type"
        android:layout_alignTop="@+id/btn_food_cancel"
        android:text="Save" />

    <EditText
        android:id="@+id/et_new_food_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_new_food_test"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_new_food_cals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new_food_desc"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Calories (kcals)"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_new_food_carbs"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_food_desc"
        android:layout_below="@+id/et_new_food_cals"
        android:ems="10"
        android:hint="Carbs (g)"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_new_food_protein"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_new_food_desc"
        android:layout_alignTop="@+id/et_new_food_carbs"
        android:ems="10"
        android:hint="Protein (g)"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_new_food_fat"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_new_food_desc"
        android:layout_below="@+id/et_new_food_carbs"
        android:ems="10"
        android:hint="Fat(g)"
        android:inputType="number" />

    <Spinner
        android:id="@+id/sp_new_food_type"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_new_food_fat"
        android:layout_centerHorizontal="true"
        android:entries="@array/food_type_array" />

</RelativeLayout>