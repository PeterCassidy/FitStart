<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/food_entry_desc"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_vertical"
            android:text="Description"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/food_entry_cals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_entry_desc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="cals"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/food_entry_carbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/food_entry_cals"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="carbs"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/food_entry_protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/food_entry_cals"
            android:layout_alignParentRight="true"
            android:layout_marginRight="150dp"
            android:layout_marginTop="10dp"
            android:text="protein"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/food_entry_fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/food_entry_protein"
            android:layout_alignTop="@+id/food_entry_carbs"
            android:layout_below="@id/food_entry_protein"
            android:text="fat"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/btn_food_entry_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/food_entry_cals"
            android:layout_marginEnd="18dp"
            card_view:srcCompat="@drawable/ic_delete_post" />

    </RelativeLayout>
</android.support.v7.widget.CardView>